{
   "apiVersion": "v1",
   "kind": "cypress",
   "sauce": {
     "metadata": {
       "name": "Testing Cypress Kitchen Sink",
       "tags": [
         "e2e",
         "release team",
         "kitchen-sink"
       ],
       "build": "Release $CI_COMMIT_SHORT_SHA"
     },
     "region": "eu-central-1"
   },
   "cypress": {
     "configFile": "cypress.json",
     "version": "9.7.0"
   },
   "suites": [
     {
       "name": "kitchen-sink-1",
       "browser": "chrome",
       "config": {
         "testingType": "e2e",
         "specPattern": [
           "examples/*.*"
         ]
       }
     },
     {
       "name": "kitchen-sink-2",
       "browser": "edge",
       "config": {
         "testingType": "e2e",
         "specPattern": [
           "examples/*.*"
         ]
       }
     },
     {
       "name": "kitchen-sink-3",
       "browser": "firefox",
       "config": {
         "testingType": "e2e",
         "specPattern": [
           "examples/*.*"
         ]
       }
     }
   ],
   "docker": {
     "image": "saucelabs/stt-cypress-mocha-node:local"
   }
}