{
    "apiVersion": "v1alpha",
    "kind": "cypress",
    "sauce": {
       "metadata": {
          "name": "Testing Cypress Kitchen Sink",
          "tags": [
             "e2e",
             "release team",
             "kitchen-sink"
          ],
          "build": "Release $CI_COMMIT_SHORT_SHA"
       },
       "region": "eu-central-1"
    },
    "cypress": {
       "configFile": "cypress.config.js",
       "version": 5
    },
    "suites": [
       {
          "name": "kitchen-sink-1",
          "browser": "chrome",
          "config": {
             "specPattern": [
                "examples/*.*"
             ]
          }
       },
       {
          "name": "kitchen-sink-2",
          "browser": "edge",
          "config": {
             "specPattern": [
                "examples/*.*"
             ]
          }
       },
       {
          "name": "kitchen-sink-3",
          "browser": "firefox",
          "config": {
             "specPattern": [
                "examples/*.*"
             ]
          }
       }
    ],
    "docker": {
       "image": {
          "name": "saucelabs/stt-cypress-mocha-node",
          "tag": "local"
       }
    }
 }
