{
  "name": "sauce-cypress-runner",
  "version": "0.0.0",
  "description": "Sauce Labs test runner image for saucectl to run Cypress tests using Sauce Labs Testrunner Toolkit.",
  "author": "devx <dev@saucelabs.com>",
  "license": "MIT",
  "private": true,
  "bin": "./bin/cypress",
  "main": "./src/cypress-runner.js",
  "homepage": "https://github.com/saucelabs/sauce-cypress-runner",
  "repository": {
    "type": "git",
    "url": "git://github.com/saucelabs/sauce-cypress-runner.git"
  },
  "scripts": {
    "test": "./bin/cypress",
    "test-integration": "bash tests/integration/integration-tests.sh",
    "lint": "eslint tests/ src/",
    "release": "release-it --github.release",
    "release:ci": "npm run release -- --ci --npm.skipChecks --no-git.requireCleanWorkingDir",
    "release:patch": "npm run release -- patch",
    "release:minor": "npm run release -- minor",
    "release:major": "npm run release -- major",
    "unit-test": "jest --env node"
  },
  "keywords": [],
  "dependencies": {
    "@babel/core": "7.18.6",
    "@babel/preset-env": "7.18.6",
    "@badeball/cypress-cucumber-preprocessor": "11.4.0",
    "@cypress/webpack-preprocessor": "5.12.0",
    "@saucelabs/cypress-plugin": "1.1.0",
    "@saucelabs/testcomposer": "^0.1.0",
    "@shelex/cypress-allure-plugin": "2.28.0",
    "@testing-library/cypress": "8.0.3",
    "babel-loader": "8.2.5",
    "cypress": "10.10.0",
    "cypress-file-upload": "5.0.8",
    "cypress-mochawesome-reporter": "3.2.0",
    "cypress-multi-reporters": "1.6.0",
    "cypress-wait-until": "1.7.2",
    "cypress-xpath": "2.0.0",
    "dotenv": "16.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "lodash": "4.17.21",
    "mocha-junit-reporter": "^2.0.0",
    "sauce-testrunner-utils": "0.6.1",
    "typescript": "4.7.4",
    "webpack": "5.73.0",
    "xml-js": "^1.6.11",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@release-it/keep-a-changelog": "^2.2.2",
    "@types/chai": "^4.2.12",
    "@types/jest": "^26.0.19",
    "@types/jquery": "^3.5.5",
    "@types/mocha": "^8.2.0",
    "@types/node": "^16.11.7",
    "bluebird": "^3.7.2",
    "eslint": "^7.15.0",
    "eslint-config-appium": "^4.5.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "mocha": "^8.2.1",
    "playwright-webkit": "1.27.1",
    "release-it": "^14.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run unit-test"
    }
  }
}
